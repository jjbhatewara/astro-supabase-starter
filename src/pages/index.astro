                Contacted: '#3b82f6',
                Accepted: '#22c55e',
                Declined: '#ef4444'
            };

            const industryColors = {
                FMCG: 'bg-green-100 text-green-800',
                Electronics: 'bg-blue-100 text-blue-800',
                'Health & Hygiene': 'bg-red-100 text-red-800',
                Fashion: 'bg-pink-100 text-pink-800',
                'Beauty & Wellness': 'bg-purple-100 text-purple-800',
                'Home Care': 'bg-yellow-100 text-yellow-800',
                Lifestyle: 'bg-indigo-100 text-indigo-800',
                Services: 'bg-cyan-100 text-cyan-800',
                Tech: 'bg-gray-100 text-gray-800',
            };

            const populateFilters = () => {
                const industries = [...new Set(speakerData.map(s => s.industry))];
                industries.sort().forEach(industry => {
                    const option = document.createElement('option');
                    option.value = industry;
                    option.textContent = industry;
                    industryFilter.appendChild(option);
                });
            };

            const renderCards = () => {
                const selectedIndustry = industryFilter.value;
                const selectedStatus = statusFilter.value;

                const filteredSpeakers = speakerData.filter(speaker => {
                    const industryMatch = selectedIndustry === 'all' || speaker.industry === selectedIndustry;
                    const statusMatch = selectedStatus === 'all' || speaker.status === selectedStatus;
                    return industryMatch && statusMatch;
                });
                
                speakersGrid.innerHTML = '';

                if (filteredSpeakers.length === 0) {
                    noResults.classList.remove('hidden');
                } else {
                    noResults.classList.add('hidden');
                    filteredSpeakers.forEach(speaker => {
                        const card = document.createElement('div');
                        card.className = `bg-white rounded-xl shadow-sm border-l-4 card-border-${speaker.status} p-5 flex flex-col justify-between`;
                        card.innerHTML = `
                            <div>
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="text-xl font-bold text-slate-900">${speaker.company}</h3>
