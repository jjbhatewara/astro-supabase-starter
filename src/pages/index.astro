                `;
                updateChart(statusCounts);
            };

            const updateChart = (counts) => {
                const data = {
                    labels: Object.keys(counts),
                    datasets: [{
                        label: 'Speaker Status',
                        data: Object.values(counts),
                        backgroundColor: Object.values(statusColors),
                        hoverOffset: 4
                    }]
                };

                if (statusChart) {
                    statusChart.data = data;
                    statusChart.update();
                } else {
                    statusChart = new Chart(statusChartCtx, {
                        type: 'doughnut',
                        data: data,
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                },
                                title: {
                                    display: true,
                                    text: 'Invitation Status'
                                }
                            }
                        }
                    });
                }
            };
            
            const handleStatusChange = (e) => {
                const speakerId = parseInt(e.target.dataset.id);
                const newStatus = e.target.value;
                const speaker = speakerData.find(s => s.id === speakerId);
                if (speaker) {
                    speaker.status = newStatus;
                    renderCards();
                    updateStats();
                }
            };

            const handleViewEmail = (e) => {
                const speakerId = parseInt(e.target.dataset.id);
                const speaker = speakerData.find(s => s.id === speakerId);
                if (speaker) {
                    modalTitle.textContent = `Email for ${speaker.company}`;
                    modalEmailText.textContent = speaker.email;
                    copyEmailBtn.dataset.email = speaker.email;
                    modal.style.display = 'flex';
                }
            };

            const addEventListenersToCards = () => {
                 document.querySelectorAll('.status-select').forEach(select => {
                    select.addEventListener('change', handleStatusChange);
                });
                document.querySelectorAll('.view-email-btn').forEach(button => {
                    button.addEventListener('click', handleViewEmail);
                });
            };

            const closeModal = () => {
                modal.style.display = 'none';
            };

            copyEmailBtn.addEventListener('click', () => {
                const emailText = copyEmailBtn.dataset.email;
                const tempTextArea = document.createElement('textarea');
                tempTextArea.value = emailText;
                document.body.appendChild(tempTextArea);
                tempTextArea.select();
                try {
                    document.execCommand('copy');
                    copyEmailBtn.textContent = 'Copied!';
                    setTimeout(() => {
                        copyEmailBtn.textContent = 'Copy to Clipboard';
                    }, 2000);
                } catch (err) {
                    console.error('Failed to copy text: ', err);
                }
                document.body.removeChild(tempTextArea);
            });

            closeModalBtn.addEventListener('click', closeModal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeModal();
                }
            });

            industryFilter.addEventListener('change', renderCards);
            statusFilter.addEventListener('change', renderCards);

            populateFilters();
            renderCards();
            updateStats();
        });
